<% provide(:title, @title) %>
<div class="center">
  <div class="span10 offset1">
  </br>
      <h1><%= @title %> (<%= @messages.count %>)</h1>
    <% if @messages.any? %>
      <ol class="microposts">
        <%= render :partial=> "users/message", :collection=> @messages %>
      </ol>
      <%= will_paginate @messages %>
    <% else %>
  </br>
      <h1>No messages!</h1>
    </br>
     <h1>Learn <%= link_to "how to send a message", help_path %></h1>
    <% end %>
  </div>
</div>
